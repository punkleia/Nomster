
<br />

  <h1 class="text-center">Comment</h1>
 
 <div class="booyah-box col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
  <div class="pull-left">
    <h2><%= @comment.place.name %></h2>
      <br />
    <% if @comment.humanized_rating.present? %>
      <b><%= @comment.humanized_rating %></b> -
    <% end %>
      <%= @comment.message %>
    <br />
        <small><%= @comment.user.email %></small>
    <br /><br />
      <div>
        <p class="text-right">
          <%= link_to "Edit", "#", class: 'btn btn-primary' %>
          <%= link_to "Delete", "#", method: :delete, data: {confirm: "Are you sure you want to delete this?"}, class: 'btn btn-danger' %>
        </p>
      </div>
    </div>
   </div>